{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "mvn",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "verify",
      "args": ["-B", "verify"],
      "isBuildCommand": true
    },
    {
      "taskName": "compile",
      "args": ["-B", "compile"],
      "isBuildCommand": true
    },
    {
      "taskName": "run",
      "args": ["-B", "exec:java"],
      "isBuildCommand": true
    },    
    {
      "taskName": "test",
      "args": ["-B", "test"],
      "isTestCommand": true
    }
  ]
}